<div asp-validation-summary="All"></div>
<form method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-10 form-group">
            <label class="control-label">Select photo to upload.</label>
            <input type="file"
                   class="form-control form-control-file"
                   asp-for="PhotoSourceImage"
                   accept=".jpg,.png"
                   style="height:auto" />
        </div>
        
        <div class="col-md-10 form-group">
            <label class="control-label">Optional Name</label>
            <input asp-for="PhotoName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <input type="submit" asp-page-handler="upload" value="Upload Photo" data-progress="Uploading..." class="btn btn-primary" />
        </div>
    </div>
</form>



